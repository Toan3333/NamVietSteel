mixin ProductItem()
	.product-item(class="bg-Neutral-50 md:p-5 p-2 group")
		.image(class="")
			a(href="./productDetail.html" class="img-ratio lozad zoom-img-1")
				img(src="./img/1.jpg", alt="") 
		.content(class="pt-6")
			h3(class="text-2xl font-bold text-Neutral-950 tracking-[-0.48px] group-hover:text-Primary-1")
				a(href="#") Q235B
			.product-parameter(class="flex flex-col gap-3 mt-3")
				-for(var i = 0; i < 3; i++)
					.product-info(class="flex items-center gap-2") 
						.left(class=" flex-shrink-0")
							.title(class="text-Neutral-500-main font-normal") Quy cách:
						.right 
							.text(class="text-Neutral-700 font-normal tracking-[-0.32px]") 3.00 - 100.00 mmx
			.product-btn(class="inline-flex mt-6")
				+ButtonPrimary("Xem thêm")
mixin ServiceItem()
